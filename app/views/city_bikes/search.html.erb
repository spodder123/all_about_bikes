<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>Search</title>
  </head>
  <body>
    <%= render 'shared/navbar' %>

<h1>Search Results</h1>

<% if @city_bikes.present? %>
  <table class="table table-success table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>City</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @city_bikes.each do |city_bike| %>
        <tr>
          <td><%= city_bike.name %></td>
          <td><%= city_bike.company %></td>
          <td><%= city_bike.city %></td>
          <td>
            <%= link_to "Show", city_bike_path(city_bike), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No matching city bikes found.</p>
<% end %>




  </body>
</html>








